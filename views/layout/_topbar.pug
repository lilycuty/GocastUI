.topbar
  a(href="/").topbar-logo
    include ../icons/_icon-logo
  .topbar-left
    .topbar-search 
      img(srcSet="./images/icon-search.png 2x", alt="Search").icon-search
      input(type="text", placeholder="Search 2+ million podcasts and listeners").input-search 
  .topbar-right
    button.button.button-primary.button-upload 
      include ../icons/_icon-upload
      span Upload
    span.topbar-icon
      include ../icons/_icon-message
    span.topbar-icon 
      include ../icons/_icon-noti
    .topbar-avatar 
      img(src="https://images.unsplash.com/photo-1426604966848-d7adac402bff?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80", alt="Avatar")